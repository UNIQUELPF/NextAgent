{
  "$id": "https://next-agent-portal/schemas/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "phone": {
          "type": "string",
          "format": "tel",
          "title": "Phone number",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              },
              "code": {
                "identifier": true,
                "via": "sms"
              }
            },
            "verification": {
              "via": "sms"
            }
          }
        },
        "username": {
          "type": "string",
          "minLength": 3,
          "maxLength": 64,
          "pattern": "^[a-zA-Z0-9._-]+$"
        },
        "user_type": {
          "type": "string",
          "enum": [
            "external",
            "internal",
            "tenant"
          ]
        },
        "tenant_id": {
          "type": "string",
          "minLength": 1
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9:_-]{3,64}$"
          },
          "uniqueItems": true
        }
      },
      "required": [
        "phone",
        "username",
        "user_type"
      ]
    }
  }
}